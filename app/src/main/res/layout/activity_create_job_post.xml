<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:weightSum="1"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="-8dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/postTolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/cardview_light_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/AppTheme.AppBarOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/title"
                android:inputType="textAutoCorrect" />

            <EditText
                android:id="@+id/text"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/text"
                android:inputType="textAutoCorrect"
                android:textAlignment="viewStart" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/cardtags1"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/photos"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:scrollbars="horizontal"
                    tools:listitem="@layout/adapter_imagecard">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <RadioButton
                    android:id="@+id/radioButtonCDD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:checked="true"
                    android:text="CDD" />

                <RadioButton
                    android:id="@+id/radioButtonCDI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="CDI" />

                <RadioButton
                    android:id="@+id/radioButtonEXTRA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="EXTRA" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category:"
                android:layout_margin="5dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profession:"
                android:layout_margin="5dp"/>

            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currency:"
                android:layout_margin="5dp"/>

            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Commission"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="17sp"
                    android:visibility="gone" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/tags_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/cardtags1"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tags_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"
                    tools:listitem="@layout/adapter_tag">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id = "@+id/find_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/cardViewColor"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/finds"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/adapter_find" />
            </android.support.v7.widget.CardView>

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="top"
                android:hint="Add tag"
                android:inputType="text"
                android:orientation="horizontal"
                android:scaleType="centerCrop"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_collapseMode="parallax" />

            <Button
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/addjobpost"
                android:elevation="10dp"
                android:text="Create"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>