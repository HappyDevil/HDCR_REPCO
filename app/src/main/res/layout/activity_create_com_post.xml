<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:weightSum="1"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="-8dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/postTolbar"
        android:layout_width="match_parent"
        app:titleTextColor="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="@style/AppTheme.AppBarOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/title"
                android:inputType="textAutoCorrect" />

            <EditText
                android:id="@+id/text"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/text"
                android:inputType="textAutoCorrect"
                android:textAlignment="viewStart" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/cardtags1"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/photos"
                    android:layout_width="wrap_content"
                    android:layout_height="161dp"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:scrollbars="horizontal"
                    tools:listitem="@layout/adapter_imagecard">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/tags_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/cardtags1"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tags_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal"
                    tools:listitem="@layout/adapter_tag">

                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id = "@+id/find_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/cardViewColor"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/finds"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/adapter_find" />
            </android.support.v7.widget.CardView>

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="top"
                android:hint="Add tag"
                android:inputType="text"
                android:orientation="horizontal"
                android:scaleType="centerCrop"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_collapseMode="parallax" />

            <Button
                android:id="@+id/create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/addjobpost"
                android:elevation="10dp"
                android:text="Create"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
